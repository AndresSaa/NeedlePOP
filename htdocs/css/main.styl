@import 'nib'
@import 'fonts.css'

body
	background #EECD80
	font-size 16px

.container
	background #EECD80

header

	h1
		background #555555
		color #FFD90F
		font-family 'Pusab'
		font-size 5rem
		margin 0
		padding 4rem 0
		text-align center

section

	&#index
		.logo-index
			background #c4c6c6
			height 20rem
			width 100%

		.buttons
			margin-top 3rem
			button
				background #FFD90F
				border 0
				border-radius 1.2rem
				color #846212
				display block
				font-family 'Vitamin'
				font-size 3rem
				margin 0 auto 2rem
				min-width 10rem
				padding 1rem 2rem
				transition all 0.15s ease
			button:hover
				transform scale(1.2)